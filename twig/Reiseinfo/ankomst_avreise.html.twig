<fieldset>
	<legend>Ankomst</legend>
	<div class="">
		<div class="form-group col-xs-4">
			<label for="reise_ank_dato">Ankomstdato</label> 
			<input type="text" name="reise_ank_dato" id="reise_ank_dato" class="form-control datepicker" value="{{reise.ank.dato}}">
		</div>
		
		<div class="form-group col-xs-4">
			<label for="reise_ank_tid">Ankomsttid <small>(ca klokkeslett)</small></label>
			<input type="text" name="reise_ank_tid" id="reise_ank_tid" class="form-control" value="{{reise.ank.tid}}">
		</div>
		
		<div class="form-group col-xs-4">
			<label for="reise_ank_sted">Ankomssted</label>
			<input type="text" name="reise_ank_sted" id="reise_ank_sted" class="form-control" value="{{reise.ank.sted}}">
		</div>
	</div>
	
	<div class="">
		<div class="form-group col-xs-12">
			<label for="reise_ank_mate">Reisemåte</label>
			<input type="text" name="reise_ank_mate" id="reise_ank_mate" class="form-control" value="{{reise.ank.mate}}">
		</div>
	</div>
	
	<div class="form-group col-xs-12">
			<div class="form-group">
				<label for="reise_ank_annet">Hvis alle ikke ankommer samtidig, forklar her hvem som kommer når, hvor og hvordan de kommer dit.</label>
				<textarea id="reise_ank_annet" name="reise_ank_annet" class="form-control">{{reise.ank.annet}}</textarea>
			</div>
	</div>

	<div class="clearfix"></div>
</fieldset>

<fieldset>
	<legend>Avreise</legend>
	<div class="">
		<div class="form-group col-xs-4">
			<label for="reise_avr_dato">Avreisedato</label>
			<input type="text" name="reise_avr_dato" id="reise_avr_dato" class="form-control datepicker" value="{{reise.avr.dato}}">
		</div>
		
		<div class="form-group col-xs-4">
			<label for="reise_avr_tid">Avreisetid <small>(ca klokkeslett)</small></label>
			<input type="text" name="reise_avr_tid" id="reise_avr_tid" class="form-control" value="{{reise.avr.tid}}">
		</div>
	</div>
	
	<div class="form-group col-xs-12">
			<div class="form-group">
				<label for="reise_avr_annet">Hvis alle ikke drar samtidig, forklar her hvem som drar når, hvor og hvordan de reiser.</label>
				<textarea id="reise_avr_annet" name="reise_avr_annet" class="form-control">{{reise.avr.annet}}</textarea>
			</div>
	</div>
</fieldset>
